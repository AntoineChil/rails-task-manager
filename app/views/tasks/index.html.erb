<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-lg-4">
      <div class="container">
        <h1>My tasks</h1>
        <% @tasks.each do |task| %>
        <div class="border p-4 my-4 d-flex justify-content-between bg-light">
          <div class="">
            <% if task.completed == true %>
              <i class="fa-solid fa-square-check me-2"></i>
            <% else %>
              <i class="fa-regular fa-square me-2"></i>
            <% end %>
            <%= link_to task.title, task_path(task), :class => "text-decoration-none text-black" %>
          </div>
          <%= link_to "", task_path(task), :class => "fa-solid fa-trash text-dark text-decoration-none",
              data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
        <% end %>
        <%= link_to "add a new task", new_task_path, :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
