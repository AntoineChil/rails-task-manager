<div class="container">
  <div class="row justify-content-center mt-4">
    <div class="col-lg-4">
      <div class="container">
        <h1><%= @task.title %></h1>
        <div class="p-5 border bg-light">
          <%= @task.details %>
        </div>
          <div class="d-flex align-items-center my-4">
            <% if @task.completed == true %>
              <i class="fa-solid fa-square-check"></i>
            <% else %>
              <i class="fa-regular fa-square"></i>
            <% end %>
            <div class="ms-3">completed</div>
        </div>
        <div class="d-flex justify-content-between">
          <%= link_to "", edit_task_path(@task), :class => "fa-solid fa-pen text-black text-decoration-none" %>
          <%= link_to "", tasks_path, :class => "fa-solid fa-arrow-rotate-left text-black text-decoration-none" %>
        </div>
      </div>
    </div>
  </div>
</div>
