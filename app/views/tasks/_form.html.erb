<%= form_with model: task, :html => {:class => "form-inline"} do |f| %>
  <div class="form-group my-4">
    <%= f.label :title, :class => "inlineFormInputName2" %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>
  <div class="form-group my-4">
    <%= f.label :details, :class => "inlineFormInputName2" %>
    <%= f.text_field :details, :class => "form-control" %>
  </div>
  <% unless f.object.new_record? %>
    <%= f.label :completed, :class => "inlineFormInputName2" %>
    <%= f.check_box :completed, {:checked=>task.completed}, :class => "" %>
  <% end %>
  <div class="input-group justify-content-center align-items-center my-5">
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
